<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xmpptest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.xmpptest.XMPPTestApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.xmpptest.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.xmpptest.WhatShouldIDo"
            android:label="@string/title_activity_what_should_ido" >
        </activity>
        <activity
            android:name="com.example.xmpptest.SingleChatActivity"
            android:label="@string/title_activity_single_chat" >
        </activity>
        <activity
            android:name="com.example.xmpptest.MultiChatActivity"
            android:label="@string/title_activity_multi_chat" >
        </activity>
        <activity
            android:name="com.example.xmpptest.FileTransferDemo"
            android:label="@string/title_activity_file_transfer_demo" >
        </activity>
    </application>

</manifest>
